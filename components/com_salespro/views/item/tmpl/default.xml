<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="SalesPro Item">
		<message>Link to a SalesPro Item</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_salespro/models/fields">
			<field name="id" type="modal_item"
				label="Select an item"
				required="true"
				edit="true"
				clear="false"
				description="Select the item to link to"
			/>
		</fieldset>
	</fields>
</metadata>
<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="SalesPro Category">
		<message>Open a SalesPro Category</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_salespro/models/fields">
			<field name="id" type="modal_category"
				label="Select a category"
				required="true"
				edit="true"
				clear="false"
				description="Select the category to link to"
			/>
		</fieldset>
	</fields>
</metadata>